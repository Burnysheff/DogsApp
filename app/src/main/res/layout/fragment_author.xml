<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:background="#ededed"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.768"
            android:paddingTop="15dp"
            android:paddingLeft="15dp" tools:layout_editor_absoluteX="0dp">
        <TextView
                android:text="Денис Черепанов"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="20dp"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="25dp"
        />
        <TextView
                android:text="Эксперт в области собак, анализа данных и просто хороший человек."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView11"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>